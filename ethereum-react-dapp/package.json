{
  "name": "ethereum-react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "canvas-confetti": "^1.9.2",
    "ganache-cli": "^6.12.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.23.1",
    "react-scripts": "5.0.1",
    "redux": "^5.0.1",
    "solc": "^0.8.26",
    "web-vitals": "^2.1.4",
    "web3": "^4.6.0"
  },
  "scripts": {
    "start": "cd ./src/solidity-contracts && truffle migrate && cd ./../.. && react-scripts start",
    "start-ganache": "npm i && ganache-cli",
    "start-ganache-mac": "npm i && open -a Terminal \"$(which ganache-cli)\"",
    "start-ganache-winodws": "npm i && start cmd /k ganache-cli",
    "clear-mac": "rm -rf node_modules && npm cache clean --force",
    "clear-windows": "rmdir /s /q node_modules && npm cache clean --force"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
